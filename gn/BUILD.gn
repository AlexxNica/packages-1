declare_args() {
  # list of modules
  modules = "default"
}

group("default") {
  testonly = true

  deps = [
    ":mkbootfs",
  ]
}

action("mkbootfs") {
  testonly = true

  manifest_file = rebase_path("user.bootfs.manifest", "", target_gen_dir)
  depfile = "$target_gen_dir/mkbootfs.d"

  all_binaries = exec_script("process_modules.py",
                             [
                               "--manifest",
                               manifest_file,
                               "--modules",
                               modules,
                               "--build-root",
                               rebase_path(root_build_dir),
                               "--depfile",
                               rebase_path(depfile)
                             ],
                             "list lines")

  script = "//buildtools/mkbootfs"
  output_file = "$root_build_dir/user.bootfs"
  outputs = [
    output_file,
  ]
  deps = all_binaries

  args = [
    "-o",
    rebase_path(output_file),
    rebase_path(manifest_file),
  ]
}

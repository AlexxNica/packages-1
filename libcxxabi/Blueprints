// libcxxabi

libcxxabi_options = [
	"CMAKE_BUILD_TYPE=Release",
	"CMAKE_BUILD_WITH_INSTALL_RPATH=ON",
	"CMAKE_INSTALL_PREFIX=''",
	"CMAKE_TOOLCHAIN_FILE=$SrcDir/third_party/llvm/cmake/platforms/Fuchsia.cmake",
	"CMAKE_EXE_LINKER_FLAGS='-nodefaultlibs -lc'",
	"LLVM_PATH=$SrcDir/third_party/llvm",
	"LLVM_ENABLE_LIBCXX=ON",
	"LIBCXXABI_LIBCXX_INCLUDES=$SrcDir/third_party/llvm/projects/libcxx/include",
	"LIBCXXABI_LIBUNWIND_INCLUDES=$SrcDir/third_party/llvm/projects/libunwind/include",
	"LIBCXXABI_USE_LLVM_UNWINDER=ON",
	"LIBCXXABI_ENABLE_STATIC=ON",
	"LIBCXXABI_ENABLE_SHARED=ON",
]

cmake(
	name = "libcxxabi_cmake_aarch64",
	src = "$SrcDir/third_party/llvm/projects/libcxxabi",
	options = cmake_host_tools + libcxxabi_options + [
		"CMAKE_SHARED_LINKER_FLAGS='$SrcDir/buildtools/toolchain/clang+llvm-$HostTriple/lib/clang/4.0.0/lib/fuchsia/libclang_rt.builtins-aarch64.a'",
		"LIBCXXABI_TARGET_TRIPLE='aarch64-fuchsia'",
		"LIBCXXABI_SYSROOT=$OutDir/sysroot/aarch64-fuchsia",
	],
	deps = [ "musl_aarch64", "libunwind_aarch64" ],
	buildDir = "$OutDir/build-libcxxabi-aarch64-fuchsia",
)

ninja(
	name = "libcxxabi_aarch64",
	ninjaFile = "$OutDir/build-libcxxabi-aarch64-fuchsia/build.ninja",
	env = [ "DESTDIR=$OutDir/sysroot/aarch64-fuchsia" ],
	targets = [ "install" ],
)

cmake(
	name = "libcxxabi_cmake_x86_64",
	src = "$SrcDir/third_party/llvm/projects/libcxxabi",
	options = cmake_host_tools + libcxxabi_options + [
		"CMAKE_SHARED_LINKER_FLAGS='$SrcDir/buildtools/toolchain/clang+llvm-$HostTriple/lib/clang/4.0.0/lib/fuchsia/libclang_rt.builtins-x86_64.a'",
		"LIBCXXABI_TARGET_TRIPLE='x86_64-fuchsia'",
		"LIBCXXABI_SYSROOT=$OutDir/sysroot/x86_64-fuchsia",
	],
	deps = [ "musl_x86_64", "libunwind_x86_64" ],
	buildDir = "$OutDir/build-libcxxabi-x86_64-fuchsia",
)

ninja(
	name = "libcxxabi_x86_64",
	ninjaFile = "$OutDir/build-libcxxabi-x86_64-fuchsia/build.ninja",
	env = [ "DESTDIR=$OutDir/sysroot/x86_64-fuchsia" ],
	targets = [ "install" ],
)

alias(
	name = "libcxxabi",
	deps = [
		"libcxxabi_aarch64",
		"libcxxabi_x86_64",
	],
)

clean(
	name = "libcxxabi-clean",
	dirs = [
		"$OutDir/build-libcxxabi-aarch64-fuchsia",
		"$OutDir/build-libcxxabi-x86_64-fuchsia",
	]
)
